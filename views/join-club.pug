extends layout 

block content 

    h1 Join a Club 
    form(action="", method="post") 
        .form-group 
            label(for="code") Join Code 
            input(type="text" class="form-control" id="code" name="code" value=(undefined===code ? '' : code)) 
        button(type="submit" class="btn btn-primary") Join Club 
    if errors 
        ul 
            for error in errors 
                li!= error.msg
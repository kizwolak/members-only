extends layout 

block content 

    h2 #{title}
    h3 Club code: #{code}
    .d-flex.flex-column.float-end.align-items-center(style="gap: 1rem;")
        h3 Members:
        if (members) 
            ul 
                for member in members
                    li #{member.full_name} (#{member.username})
    a(href="/create-post" class="btn btn-primary") Create a post